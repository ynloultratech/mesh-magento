<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="meshpayment" translate="label comment" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Mesh Payment</label>
                <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                </field>
                <field id="api_key" translate="label" type="text" sortOrder="95" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API KEY</label>
                    <comment>a SECURE value that should only ever be known between you and Pay'nUp.</comment>
                </field>
                <field id="api_iss" translate="label" type="text" sortOrder="96" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Identifier</label>
                    <comment>non-secure value that should be passed within the JWT under the iss claim.</comment>
                </field>
                <field id="autoRedirect" translate="label" type="select" sortOrder="97" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Auto Redirect</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="autoRedeem" translate="label" type="select" sortOrder="98" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Auto Redeem</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="allowShare" translate="label" type="select" sortOrder="99" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Allow Share</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="qrCode" translate="label" type="select" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Private Checkout (QR Code)</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
